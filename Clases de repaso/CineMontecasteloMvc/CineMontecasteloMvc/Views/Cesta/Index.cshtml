@model List<CineMontecasteloMvc.Models.CestaItem>

@{
    ViewData["Title"] = "Cesta";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No hay entradas en la cesta.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Película</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Precio.ToString("0.00") €</td>
                    <td>@item.Total.ToString("0.00") €</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total</th>
                <th>
                    @Model.Sum(i => i.Total).ToString("0.00") €
                </th>
            </tr>
        </tfoot>
    </table>

    <form asp-action="Vaciar" method="post">
        <button type="submit" class="btn btn-danger">Vaciar cesta</button>
    </form>
}
