@model IEnumerable<PokemonProyect.Models.Pokemon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<form asp-action="GetPokemons" method="get" class="row g-2 mb-3">
   <div class="col-auto">
       <label for="Peso" class="form-label">Peso</label>
        <input name="Peso" id="Peso" class="form-control"
               type="number" step="0.01" inputmode="decimal"
               value="@(Context.Request.Query["Peso"])" />
   </div>
    <div class="col-auto">
        <label for="Altura" class="form-label">Altura</label>
        <input name="Altura" id="Altura" class="form-control"
               type="number" step="0.01" inputmode="decimal"
               value="@(Context.Request.Query["Altura"])" />
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PokemonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PokemonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PokemonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
