@model MontecasteloAuthDemo.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}
<h1>Registro</h1>

<form asp-action="Register" method="post" class="mt-3" style="max-width:520px">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" autocomplete="username"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" autocomplete="new-password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password"/>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Role" class="form-label"></label>
    <select asp-for="Role" asp-items="ViewBag.Roles" class="form-select"></select>
    <span asp-validation-for="Role" class="text-danger"></span>
</div>
    <button class="btn btn-success" type="submit">Crear cuenta</button>
    <a class="btn btn-link" asp-action="Login">Ya tengo cuenta</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
