@model MontecasteloAuthDemo.Models.Usuario
@{
    ViewData["Title"] = "Detalles";
}
<h1>Detalles</h1>
<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Usuario</dt>
    <dd class="col-sm-10">@Model.NombreUsuario</dd>
    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Rol</dd>
</dl>
<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="ResetPassword" asp-route-id="@Model.Id">Reset pass</a>
    <a class="btn btn-link" asp-action="Index">Volver</a>
</p>
