@model MontecasteloAuthDemo.Controllers.UsersController.ResetPasswordDto
@{
    ViewData["Title"] = "Restablecer contraseña";
}
<h1>Restablecer contraseña</h1>
<p>Usuario: <strong>@ViewBag.UserName</strong></p>

<form method="post" class="mt-3" style="max-width:520px">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmNewPassword" class="form-label"></label>
        <input asp-for="ConfirmNewPassword" class="form-control" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Guardar</button>
    <a class="btn btn-link" asp-action="Index">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
